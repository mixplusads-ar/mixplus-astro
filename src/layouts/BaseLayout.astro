---
import "../styles/globals.css";
import SearchOverlay from '@/components/SearchOverlay.astro';
import { site } from '@/data/site';
import uxUrl from '@/scripts/ux.ts?url';  // ✅
const { lang = 'fa', title = '...', description = '...', canonical = undefined, ogImage = '/img/og-default.jpg' } = Astro.props;
const isFa = lang === 'fa';
const dir = isFa ? 'rtl' : 'ltr';
const htmlLang = isFa ? 'fa' : 'en';
const otherLang = isFa ? 'en' : 'fa';
---
<!doctype html>
<html lang={htmlLang} dir={dir} class="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    {canonical && <link rel="canonical" href={canonical} />}

    <!-- hreflang -->
    <link rel="alternate" href={`${site.domain}/fa/`} hrefLang="fa" />
    <link rel="alternate" href={`${site.domain}/en/`} hrefLang="en" />
    <link rel="alternate" href={site.domain} hrefLang="x-default" />

    <!-- OG / Twitter -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={site.domain} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- theme-color برای هر تم -->
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#ffffff" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#0b0f14" />

    <!-- Favicons & Manifest -->
    <link rel="icon" href="/icons/favicon.ico" />
    <link rel="apple-touch-icon" href="/icons/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Preload fonts (اگر فایل‌ها را داری) -->
    <link rel="preload" href="/fonts/KALAMEH-REGULAR.woff2" as="font" type="font/woff2" crossOrigin="anonymous" />
    <link rel="preload" href="/fonts/Montserrat-Variable.woff2" as="font" type="font/woff2" crossOrigin="anonymous" />

    <!-- جلوگیری از فلیکر تم -->
    <script is:inline>
      (function () {
        try {
          var html = document.documentElement;
          var saved = localStorage.getItem('mix_theme');
          if (saved === 'dark' || saved === 'light') {
            html.classList.remove('light','dark');
            html.classList.add(saved);
          } else {
            if (!html.classList.contains('light') && !html.classList.contains('dark')) {
              html.classList.add('light');
            }
          }
        } catch(e) {}
      })();
    </script>

    <!-- JSON-LD سازمان -->
    <script type="application/ld+json" is:inline>
      {
        "@context":"https://schema.org",
        "@type":"Organization",
        "name":"MixPlus",
        "url":"{site.domain}",
        "logo":"{site.domain}/img/logo-black.svg",
        "sameAs":[
          "{site.socials.instagram}",
          "{site.socials.aparat}",
          "{site.socials.youtube}",
          "{site.socials.linkedin}"
        ]
      }
    </script>
  </head>

  <body class={isFa ? 'font-fa rtl' : 'font-en ltr'}>
    <slot />

    <!-- Search Overlay -->
    <SearchOverlay lang={lang} />

    <!-- افزودن کلاس scrolled به html برای استایل هدر هنگام اسکرول -->
    <script is:inline>
      (function () {
        var ticking = false;
        function onScroll() {
          if (!ticking) {
            window.requestAnimationFrame(function () {
              var y = window.scrollY || window.pageYOffset || 0;
              if (y > 12) document.documentElement.classList.add('scrolled');
              else document.documentElement.classList.remove('scrolled');
              ticking = false;
            });
            ticking = true;
          }
        }
        window.addEventListener('scroll', onScroll, { passive: true });
        onScroll();
      })();
    </script>

    <!-- UX Phase 5 -->
    <script type="module" src={uxUrl}></script>
  </body>
</html>
