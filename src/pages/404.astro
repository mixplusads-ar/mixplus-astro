---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
const { lang = 'fa' } = Astro.props;
const isFa = lang === 'fa';
---
<BaseLayout lang={lang} title={isFa ? 'صفحه پیدا نشد' : 'Page not found'}>
  <Header lang={lang} />
  <main class="mx-auto max-w-[720px] px-6 py-20 text-center">
    <h1 class="text-4xl font-bold mb-4">{isFa ? '۴۰۴ — صفحه پیدا نشد' : '404 — Page not found'}</h1>
    <p class="muted mb-8">{isFa ? 'ممکن است آدرس اشتباه باشد یا صفحه منتقل شده باشد.' : 'The page may have moved or the URL is incorrect.'}</p>
    <a href={isFa ? '/fa/' : '/en/'} class="btn btn-primary">{isFa ? 'بازگشت به خانه' : 'Back to Home'}</a>
  </main>
</BaseLayout>
