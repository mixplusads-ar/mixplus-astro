---
import Base from '@/layouts/BaseLayout.astro';
import { categories } from '@/data/categories.ts';
const lang = 'fa';
---
<Base lang={lang} title="محصولات | MixPlus">
  <section class="section container">
    <h2 style="font-weight:800">محصولات</h2>
    <ul style="list-style:none; padding:0; margin:16px 0; display:grid; grid-template-columns:repeat(2,minmax(0,1fr)); gap:10px">
      {categories.map(c => (
        <li><a class="btn ghost" href={`/fa/products/${c.slug}/`}>{c.nameFa}</a></li>
      ))}
    </ul>
  </section>
</Base>
