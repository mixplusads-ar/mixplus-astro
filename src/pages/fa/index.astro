---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Hero from '@/components/Hero.astro';
import SectionTitle from '@/components/SectionTitle.astro';
import QuickLinksRow from '@/components/QuickLinksRow.astro';
import FactoryFeature from '@/components/FactoryFeature.astro';
import SocialRow from '@/components/SocialRow.astro';
import Footer from '@/components/Footer.astro';

// اگر بعداً بنرهای فول‌بلید را فعال کردیم:
// import FullBleedImage from '@/components/FullBleedImage.astro';

const pageTitle = 'میکس‌پلاس — لندینگ';
const pageDesc  = 'لوکس و مینیمال؛ الهام از طراحی ایتالیایی. بیش از ۴۰ سال تجربه در تولید لوازم خانگی: سینک، اجاق، فر توکار و هود.';
---
<BaseLayout lang="fa" title={pageTitle} description={pageDesc} ogImage="/img/og-default.jpg">
  <!-- Header -->
  <Header lang="fa" />

  <!-- Hero (ویدیوهای رندوم + پوستر) -->
  <Hero lang="fa" />

  <!-- سکشن معرفی کوتاه بالای ۴ لینک -->
  <SectionTitle
    lang="fa"
    title="یک تایتل زیبا برای یک متن خوب"
    subtitle="یک متن کوتاه معرفی می‌آید. این بلوک بالای ۴ لینکِ سریع قرار می‌گیرد."
  />

  <!-- ۴ لینک سریع: محصولات / رویدادها / خدمات / آموزش -->
  <QuickLinksRow lang="fa" />

  <!-- لنگرها (هدف لینک‌های بالا) -->
  <div id="products"></div>
  <div id="events"   class="mt-24"></div>
  <div id="services" class="mt-24"></div>
  <div id="academy"  class="mt-24"></div>

  {/*
  // وقتی مشکل فول‌بلید را برگرداندیم، این‌ها را آن‌کامنت کن:
  <FullBleedImage src="/img/placeholder-1920x900.jpg" alt="بنر ۱" />
  <SectionTitle lang="fa" title="یک تایتل دیگر" subtitle="متن کوتاه توضیحی برای سکشن بعد." />
  <FullBleedImage src="/img/placeholder-1920x900.jpg" alt="بنر ۲" />
  */}

  <!-- سکشن کارخانه / ویدئو -->
  <FactoryFeature
    lang="fa"
    video="/video/factory.mp4"
    poster="/img/placeholder-1920x900.jpg"
  />

  <!-- شبکه‌های اجتماعی گرد -->
  <SocialRow lang="fa" />

  <!-- Footer -->
  <Footer lang="fa" />
</BaseLayout>
