---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Hero from '@/components/Hero.astro';
import SectionTitle from '@/components/SectionTitle.astro';
import CategoryGallery from '@/components/CategoryGallery.astro';
import FullBleedImage from '@/components/FullBleedImage.astro';
import VideoEmbed from '@/components/VideoEmbed.astro';
import QuickLinksRow from '@/components/QuickLinksRow.astro';
import SocialRow from '@/components/SocialRow.astro';
import Footer from '@/components/Footer.astro';

const pageTitle = 'میکس‌پلاس — لوازم خانگی با طراحی ایتالیایی';
const pageDesc  = 'لوکس و مینیمال؛ الهام از طراحی ایتالیایی. بیش از ۴۰ سال تجربه در تولید سینک، اجاق، فر توکار و هود.';
---
<BaseLayout lang="fa" title={pageTitle} description={pageDesc} ogImage="/img/og-default.jpg">
  <Header lang="fa" />
  <Hero lang="fa" />

  <!-- گالری ۴تایی دسته‌های محصول -->
  <CategoryGallery lang="fa" />

  <!-- بنر/تیتر/بنر/تیتر/بنر/تیتر/بنر -->
  <FullBleedImage src="/img/banner-01.jpg" alt="طراحی دقیق اجاق‌ها" darken />
  <SectionTitle lang="fa" title="لــوکس و مینیمال؛ الهام از طراحی ایتالیایی"
    subtitle="میکس‌پلاس با بیش از ۴۰ سال تجربه، مجموعه‌ای کامل از سینک، اجاق، فر توکار و هود را با قطعات و استانداردهای اروپایی ارائه می‌کند." />
  <FullBleedImage src="/img/banner-02.jpg" alt="کیفیت متریال و فرآیند کنترل" darken />
  <SectionTitle lang="fa" title="جزئیات مهندسی؛ عملکرد قابل اتکا"
    subtitle="هر محصول با دقت بالا، دوام طولانی و کاربری آسان طراحی شده تا تجربه آشپزخانه‌ای بهتر بسازد." />
  <FullBleedImage src="/img/banner-03.jpg" alt="هماهنگی کالکشن‌ها با سبک دکور" darken />
  <SectionTitle lang="fa" title="هماهنگی در کالکشن‌های کامل"
    subtitle="ترکیب سینک، اجاق، فر و هود در یک هارمونی بصری؛ از مینیمال مدرن تا کلاسیک لوکس." />
  <FullBleedImage src="/img/banner-04.jpg" alt="استانداردهای اروپایی" darken />

  <!-- ویدئوی کارخانه (FA= Aparat / EN= YouTube) -->
  <VideoEmbed lang="fa" />

  <!-- لینک‌های سریع: محصولات / رویدادها / خدمات / آموزش -->
  <QuickLinksRow lang="fa" />

  <!-- تیتر + یک بنر فول‌بلید دیگر -->
  <SectionTitle lang="fa" title="طراحی، نوآوری، و خدمات گسترده"
    subtitle="شبکه‌ی نمایندگان معتبر و خدمات پس از فروش، پشتوانه‌ی اطمینان شما از انتخاب میکس‌پلاس است." />
  <FullBleedImage src="/img/banner-05.jpg" alt="شبکه‌ی نمایندگان و خدمات" darken />

  <!-- شبکه‌های اجتماعی ۵تایی -->
  <SocialRow lang="fa" />

  <Footer lang="fa" />
</BaseLayout>
