---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Hero from '@/components/Hero.astro';
import SectionTitle from '@/components/SectionTitle.astro';
import CategoryCards from '@/components/CategoryCards.astro';
import FullBleedImage from '@/components/FullBleedImage.astro';
import FactoryFeature from '@/components/FactoryFeature.astro';
import SocialRow from '@/components/SocialRow.astro';
---
<BaseLayout lang="fa" title="میکس‌پلاس — لندینگ">
  <Header lang="fa" />
  <Hero lang="fa" />

  <SectionTitle lang="fa" title="یک تایتل زیبا برای یک متن خوب"
    subtitle="یک متن کوتاه معرفی می‌آید. این بلوک بالای گرید ۴لینکی قرار می‌گیرد." />
  <CategoryCards lang="fa" />

  <FullBleedImage src="/img/placeholder-1920x900.jpg" alt="banner-1" />
  <SectionTitle lang="fa" title="یک تایتل زیبا برای متن دوم" subtitle="کپی کوتاه توضیحی برای سکشن دوم." />
  <FullBleedImage src="/img/placeholder-1920x900.jpg" alt="banner-2" />

  <FactoryFeature lang="fa" video="/video/factory.mp4" poster="/img/placeholder-1920x900.jpg" />

  <SectionTitle lang="fa" title="۴ لینک سریع پایین صفحه" subtitle="این ۴ دکمه سمت به صفحات مربوطه هدایت می‌کنند." />
  <CategoryCards lang="fa" />

  <FullBleedImage src="/img/placeholder-1920x900.jpg" alt="banner-3" />

  <SocialRow lang="fa" />

  <!-- لنگرها -->
  <div id="products"></div>
  <div id="about" class="mt-24"></div>
  <div id="after-sales" class="mt-24"></div>
  <div id="dealers" class="mt-24"></div>
  <div id="events" class="mt-24"></div>
  <div id="services" class="mt-24"></div>
  <div id="academy" class="mt-24"></div>
</BaseLayout>
