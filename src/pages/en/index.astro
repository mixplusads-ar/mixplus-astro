---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Hero from '@/components/Hero.astro';
import SectionTitle from '@/components/SectionTitle.astro';
import CategoryGallery from '@/components/CategoryGallery.astro';
import FullBleedImage from '@/components/FullBleedImage.astro';
import VideoEmbed from '@/components/VideoEmbed.astro';
import QuickLinksRow from '@/components/QuickLinksRow.astro';
import SocialRow from '@/components/SocialRow.astro';
import Footer from '@/components/Footer.astro';

const pageTitle = 'MixPlus — Italian-inspired Home Appliances';
const pageDesc  = 'Luxury & minimal. 40+ years of expertise in sinks, hobs, built-in ovens, and hoods.';
---
<BaseLayout lang="en" title={pageTitle} description={pageDesc} ogImage="/img/og-default.jpg">
  <Header lang="en" />
  <Hero lang="en" />

  <CategoryGallery lang="en" />

  <FullBleedImage src="/img/banner-01.jpg" alt="Precision in hob engineering" darken />
  <SectionTitle lang="en" title="Luxury & Minimal, Inspired by Italian Design"
    subtitle="With 40+ years of expertise, MixPlus delivers a complete range of sinks, hobs, built-in ovens and hoods built to European standards." />
  <FullBleedImage src="/img/banner-02.jpg" alt="Material quality & QC" darken />
  <SectionTitle lang="en" title="Engineered Details, Reliable Performance"
    subtitle="Every product is designed for durability, ease of use and a better kitchen experience." />
  <FullBleedImage src="/img/banner-03.jpg" alt="Collections that harmonize with interiors" darken />
  <SectionTitle lang="en" title="Full Collections in Harmony"
    subtitle="Combine sinks, hobs, ovens and hoods in a cohesive visual language—from modern minimal to timeless classic." />
  <FullBleedImage src="/img/banner-04.jpg" alt="European standards" darken />

  <VideoEmbed lang="en" />

  <QuickLinksRow lang="en" />

  <SectionTitle lang="en" title="Design, Innovation & Solid Support"
    subtitle="A trusted dealer network and after-sales service give you confidence in every MixPlus purchase." />
  <FullBleedImage src="/img/banner-05.jpg" alt="Dealer & service network" darken />

  <SocialRow lang="en" />

  <Footer lang="en" />
</BaseLayout>

---
import VideoEmbed from '@/components/VideoEmbed.astro';
const links = {
  youtube: 'https://www.youtube.com/embed/XXXXXXXX', // برای EN
  aparat:  'https://www.aparat.com/video/video/embed/videohash/XXXXXXXX/vt/frame', // برای FA
};
---
<section class="section">
  <VideoEmbed lang="fa" links={links} title="ویدیو کارخانه میکس‌پلاس" />
</section>

