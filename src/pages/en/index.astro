---
import Base from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import SectionTitle from '../../components/SectionTitle.astro';
import Categories from '../../components/CategoriesGrid.astro';
import Banner from '../../components/FullBleedBanner.astro';
import VideoEmbed from '../../components/VideoEmbed.astro';
import SocialStrip from '../../components/SocialStrip.astro';
import { site } from '../../data/site.ts';
const lang = 'en';
const t = site[lang];
---
<Base lang={lang} title={t.title} description={t.description}>
  <Hero lang={lang} />

  <section class="section container">
    <SectionTitle title={t.sections.introTitle} text={t.sections.introText} />
    <div style="height:12px"></div>
    <Categories lang={lang} />
  </section>

  <Banner img="/media/banners/fullbleed-01.jpg" title="Durability & Build" text="Engineered standards and rigorous QA." />
  <Banner img="/media/banners/fullbleed-02.jpg" title="Minimal Design" text="Clarity and brand signature." />

  <section class="section">
    <VideoEmbed src={lang==='fa'? t.factoryEmbed : t.factoryEmbed} cover="/media/factory/placeholder.jpg" title="Factory" />
  </section>

  <section class="section container">
    <SectionTitle title="Quick access" text="" />
    <div class="grid">
      <a class="card" href={`/${lang}/products/`}><img src="/media/grid-cards/card-01.jpg"/><div class="body">{lang==='fa'?'محصولات':'Products'}</div></a>
      <a class="card" href={`/${lang}/events/`}><img src="/media/grid-cards/card-02.jpg"/><div class="body">{lang==='fa'?'رویدادها':'Events'}</div></a>
      <a class="card" href={`/${lang}/after-sales/`}><img src="/media/grid-cards/card-03.jpg"/><div class="body">{lang==='fa'?'خدمات':'Services'}</div></a>
      <a class="card" href={`/${lang}/academy/`}><img src="/media/grid-cards/card-04.jpg"/><div class="body">{lang==='fa'?'آموزش':'Academy'}</div></a>
    </div>
  </section>

  <Banner img="/media/banners/fullbleed-03.jpg" title="Italian Inspiration" text="Beauty meets performance." />
  <Banner img="/media/banners/fullbleed-04.jpg" title="Warranty & Support" text="Nationwide authorized dealers." />

  <section class="section">
    <SocialStrip />
  </section>
</Base>
