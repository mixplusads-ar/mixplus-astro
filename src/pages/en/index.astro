---
import Base from '@/layouts/BaseLayout.astro';
import Hero from '@/components/HeroMedia.astro';
import VideoEmbed from '@/components/VideoEmbed.astro';
const lang = 'en';
const links = {
  youtube: 'https://www.youtube.com/embed/XXXXXXXX',
  aparat:  'https://www.aparat.com/video/video/embed/videohash/XXXXXXXX/vt/frame'
};
---
<Base lang={lang} title="MixPlus">
  <Hero
    lang={lang}
    videos={['/media/hero-01.mp4','/media/hero-02.mp4','/media/hero-03.mp4','/media/hero-04.mp4']}
    title="Luxury & Minimal, Inspired by Italian Design"
    subtitle="40+ years of expertise in premium home appliances—hobs, sinks, built-in ovens and hoods."
    cta1={{ href:`/${lang}/products`, label:'See Products' }}
    cta2={{ href:`/${lang}/about`, label:'About MixPlus' }}
    arrowTarget="#after-hero"
  />

  <div id="after-hero"></div>

  <!-- 4 portrait tiles (3/4) -->
  <section class="section container">
    <div class="portrait4">
      <a class="tile" href={`/${lang}/products/hobs`}>
        <img src="https://images.unsplash.com/photo-1519501025264-65ba15a82390?q=80&w=1200&auto=format&fit=crop" alt="Hobs" />
        <span class="label">Hobs</span>
      </a>
      <a class="tile" href={`/${lang}/products/ovens`}>
        <img src="https://images.unsplash.com/photo-1556911220-e15b29be8c8f?q=80&w=1200&auto=format&fit=crop" alt="Built-in Ovens" />
        <span class="label">Built-in Ovens</span>
      </a>
      <a class="tile" href={`/${lang}/products/sinks`}>
        <img src="https://images.unsplash.com/photo-1519710164239-da123dc03ef4?q=80&w=1200&auto=format&fit=crop" alt="Sinks" />
        <span class="label">Sinks</span>
      </a>
      <a class="tile" href={`/${lang}/products/hoods`}>
        <img src="https://images.unsplash.com/photo-1461151304267-38535e780c79?q=80&w=1200&auto=format&fit=crop" alt="Hoods" />
        <span class="label">Hoods</span>
      </a>
    </div>
  </section>

  <!-- Full-bleed banner + title/text -->
  <section class="section container">
    <div class="split">
      <div>
        <h2>طراحی، کیفیت، اصالت</h2>
        <p class="lead">الهام از دیزاین ایتالیایی با تمرکز بر مینیمالیسم و کارایی. کیفیت ساخت بالا برای سال‌ها استفاده بی‌دردسر.</p>
      </div>
      <div class="fullbleed"><img src="https://images.unsplash.com/photo-1506368249639-73a05d6f6488?q=80&w=1440&auto=format&fit=crop" alt="" /></div>
    </div>
  </section>

  <section class="section container">
    <div class="fullbleed"><img src="https://images.unsplash.com/photo-1507089947368-19c1da9775ae?q=80&w=1440&auto=format&fit=crop" alt="" /></div>
  </section>

  <!-- Factory video -->
  <section class="section container">
    <h2>Factory Video</h2>
    <p class="lead">A brief look at MixPlus manufacturing capacity and quality control.</p>
    <VideoEmbed lang={lang} links={links} title="Factory Video میکس‌پلاس" />
  </section>

  <!-- 4 links: products/events/services/academy -->
  <section class="section container">
    <div class="grid4">
      <a class="card" href={`/${lang}/products`}>Products</a>
      <a class="card" href={`/${lang}/events`}>Events</a>
      <a class="card" href={`/${lang}/services`}>Services</a>
      <a class="card" href={`/${lang}/academy`}>Academy</a>
    </div>
  </section>

  <section class="section container">
    <div class="fullbleed"><img src="https://images.unsplash.com/photo-1519710164239-da123dc03ef4?q=80&w=1440&auto=format&fit=crop" alt="" /></div>
  </section>

  <!-- socials -->
  <section class="section container">
    <h2>Follow us on social media</h2>
    <p class="lead">برای دیدن تازه‌ترین اخبار، Products و Academy‌ها.</p>
    <div class="socials">
      <a href="https://instagram.com" target="_blank" rel="noopener">IG</a>
      <a href="https://youtube.com" target="_blank" rel="noopener">YT</a>
      <a href="https://aparat.com" target="_blank" rel="noopener">AP</a>
      <a href="https://linkedin.com" target="_blank" rel="noopener">IN</a>
      <a href="https://t.me" target="_blank" rel="noopener">TG</a>
    </div>
  </section>
</Base>
