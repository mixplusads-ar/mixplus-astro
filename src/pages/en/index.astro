---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Hero from '@/components/Hero.astro';
import SectionTitle from '@/components/SectionTitle.astro';
import QuickLinksRow from '@/components/QuickLinksRow.astro';
import FactoryFeature from '@/components/FactoryFeature.astro';
import SocialRow from '@/components/SocialRow.astro';
import Footer from '@/components/Footer.astro';

// import FullBleedImage from '@/components/FullBleedImage.astro';

const pageTitle = 'MixPlus â€” Landing';
const pageDesc  = 'Luxury & minimal, inspired by Italian design. 40+ years of experience in home appliances: sinks, hobs, built-in ovens, and hoods.';
---
<BaseLayout lang="en" title={pageTitle} description={pageDesc} ogImage="/img/og-default.jpg">
  <!-- Header -->
  <Header lang="en" />

  <!-- Hero (random autoplay videos + posters) -->
  <Hero lang="en" />

  <!-- Intro above the four quick links -->
  <SectionTitle
    lang="en"
    title="A beautiful headline"
    subtitle="Short intro copy above the four quick links."
  />

  <!-- Four quick links -->
  <QuickLinksRow lang="en" />

  <!-- Anchors for quick links -->
  <div id="products"></div>
  <div id="events"   class="mt-24"></div>
  <div id="services" class="mt-24"></div>
  <div id="academy"  class="mt-24"></div>

  {/*
  <FullBleedImage src="/img/placeholder-1920x900.jpg" alt="Banner 1" />
  <SectionTitle lang="en" title="Another headline" subtitle="Short explanatory copy." />
  <FullBleedImage src="/img/placeholder-1920x900.jpg" alt="Banner 2" />
  */}

  <!-- Factory / video feature -->
  <FactoryFeature
    lang="en"
    video="/video/factory.mp4"
    poster="/img/placeholder-1920x900.jpg"
  />

  <!-- Social circles -->
  <SocialRow lang="en" />

  <!-- Footer -->
  <Footer lang="en" />
</BaseLayout>
