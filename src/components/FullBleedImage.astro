---
interface Props { src: string; alt?: string; darken?: boolean; }
const { src, alt = '', darken = false } = Astro.props;
---
<section class="relative w-full h-[56vh] md:h-[68vh] my-8">
  <img src={src} alt={alt} class="absolute inset-0 w-full h-full object-cover" loading="lazy" />
  {darken && <div class="absolute inset-0 bg-black/35 dark:bg-black/45"></div>}
</section>
