---
/** Props:
 * - img: string (required)
 * - title?: string
 * - text?: string
 */
const { img, title = '', text = '' } = Astro.props;
---
<section class="banner">
  <img src={img} alt={title || 'Banner'} loading="lazy" />
  {(title || text) && (
    <div class="inset">
      <div class="wrap">
        <div class="section-title">
          {title && <h2>{title}</h2>}
          {text  && <p>{text}</p>}
        </div>
      </div>
    </div>
  )}
</section>
