---
const { lang = 'fa' } = Astro.props;
const isFa = lang === 'fa';

type Item = { href: string; titleFa: string; titleEn: string; src: string; };
const items: Item[] = [
  { href:`/${lang}/products/hobs`,   titleFa:'اجاق گاز',     titleEn:'Hobs',   src:'/img/cat-hob.jpg'   },
  { href:`/${lang}/products/sinks`,  titleFa:'سینک ظرفشویی', titleEn:'Sinks',  src:'/img/cat-sink.jpg'  },
  { href:`/${lang}/products/ovens`,  titleFa:'فرتوکار',      titleEn:'Ovens',  src:'/img/cat-oven.jpg'  },
  { href:`/${lang}/products/hoods`,  titleFa:'هود',          titleEn:'Hoods',  src:'/img/cat-hood.jpg'  },
];
---
<section aria-label={isFa ? 'دسته‌های محصول' : 'Product categories'} class="mx-auto max-w-[1280px] px-6 py-10">
  <div class="grid grid-cols-2 md:grid-cols-4 gap-5">
    {items.map((it) => (
      <a href={it.href} class="group block">
        <figure class="relative overflow-hidden rounded-2xl border" style="border-color:var(--stroke);">
          <div class="aspect-[3/4] bg-[rgba(0,0,0,.06)] dark:bg-[rgba(255,255,255,.06)]">
            <img src={it.src} alt="" class="w-full h-full object-cover group-hover:scale-[1.03] transition-transform duration-300" loading="lazy" />
          </div>
          <figcaption class="absolute inset-x-0 bottom-0 p-3">
            <span class="inline-block glass rounded-xl px-3 py-1 text-sm">{isFa ? it.titleFa : it.titleEn}</span>
          </figcaption>
        </figure>
      </a>
    ))}
  </div>
</section>
