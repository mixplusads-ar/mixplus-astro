---
import { social } from '../data/social.ts'; // مطمئن باش فایل social.ts لینک‌ها را export می‌کند

const icons = [
  { key: 'linkedin',  label: 'LinkedIn',  href: social.linkedin,  src: '/icons/linkedin.svg'  },
  { key: 'instagram', label: 'Instagram', href: social.instagram, src: '/icons/instagram.svg' },
  { key: 'youtube',   label: 'YouTube',   href: social.youtube,   src: '/icons/youtube.svg'   },
  { key: 'aparat',    label: 'Aparat',    href: social.aparat,    src: '/icons/aparat.svg'    },
  { key: 'telegram',  label: 'Telegram',  href: social.telegram,  src: '/icons/telegram.svg'  },
];
---
<div class="social-strip" aria-label="Social links">
  {icons.map(i => (
    <a href={i.href} target="_blank" rel="noopener" aria-label={i.label}>
      <img src={i.src} alt="" loading="lazy" />
    </a>
  ))}
</div>

<style>
.social-strip{
  display:flex; justify-content:center; align-items:center; gap:20px; padding:24px 0;
}
.social-strip a{
  width:56px; height:56px; border-radius:50%; display:grid; place-items:center;
  border:1px solid var(--stroke); background:var(--card);
  transition: transform .15s ease;
}
.social-strip a:hover{ transform:translateY(-2px); }
.social-strip img{ width:26px; height:26px; display:block; }
</style>
