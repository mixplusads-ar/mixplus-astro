---
import { social } from '../data/social';
---
<section class="social-strip">
  <a href={social.linkedin}  target="_blank" rel="noopener"><img src="/public/icons/linkedin.svg".replace('/public','')  alt="LinkedIn" /></a>
  <a href={social.instagram} target="_blank" rel="noopener"><img src="/public/icons/instagram.svg".replace('/public','') alt="Instagram" /></a>
  <a href={social.youtube}   target="_blank" rel="noopener"><img src="/public/icons/youtube.svg".replace('/public','')   alt="YouTube" /></a>
  <a href={social.aparat}    target="_blank" rel="noopener"><img src="/public/icons/aparat.svg".replace('/public','')    alt="Aparat" /></a>
  <a href={social.telegram}  target="_blank" rel="noopener"><img src="/public/icons/telegram.svg".replace('/public','')  alt="Telegram" /></a>
</section>

<style>
.social-strip{display:flex;justify-content:center;gap:22px;padding:24px 0}
.social-strip a{width:56px;height:56px;border-radius:50%;display:grid;place-items:center;background:var(--card);border:1px solid var(--stroke);transition:transform .15s ease}
.social-strip a:hover{transform:translateY(-2px)}
/* کلید رنگ آیکون‌ها */
.social-strip img{width:26px;height:26px;display:block;filter:var(--social-filter) !important}
</style>
